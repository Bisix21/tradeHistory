<form method="post" action="{{ path('app_category_delete', {'id': category.main.id}) }}" onsubmit="return confirm
('Are' + ' ' + 'you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.main.id) }}">
    <button class="btn {{ additional_class|default('btn-danger') }}">Delete</button>
</form>
