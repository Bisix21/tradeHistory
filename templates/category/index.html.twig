{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <a class="btn btn-outline-success" href="{{ path('app_category_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td class="text-capitalize">{{ category.name }}</td>
                <td>
                    <div class="d-flex flex-row">
                        <a class="btn btn-warning me-2" href="{{ path('app_category_edit', {'id': category.id}) }}">Edit</a>
                        {{ include('category/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
