{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <div class="row">
        <h4>Create:</h4>
        <div class="col">
            {{ include('component/_link_succes.html.twig', {
                'href': path('app_category_new'),
                'link_label':'Main category'}) }}
            {{ include('component/_link_succes.html.twig', {
                'href': path('app_sub_category_new'),
                'link_label': 'Sub category',
                'aditional_class':'mx-4'
            }) }}
        </div>
    </div>

    <div class="row mt-5">
        {% for category in categories %}
            {% if category is not iterable %}
                <div class="col-lg-6 col-md-12 my-3">
                    <div class="card">
                        <div class="card-header">
                            {{ category.name }}
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{ category.name }}
                                <a class="btn btn-sm btn-outline-warning float-end"
                                   href="{{ path('app_category_edit' ,{'id' : category.id}) }}">Edit</a>
                            </li>
                        </ul>
                    </div>
                </div>
            {% else %}
                <div class="col-lg-6 col-md-12 my-3">
                    <div class="card">
                        <div class="card-header">
                            {{ category.main.name }}
                        </div>
                        <ul class="list-group list-group-flush">
                            {% for sub in category %}
                                <li class="list-group-item">{{ sub.name }}
                                    <a class="btn btn-sm btn-outline-warning float-end"
                                       href="{{ path('app_category_edit' ,{'id' : sub.id}) }}">Edit</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>

{% endblock %}
