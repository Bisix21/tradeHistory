{% extends 'base.html.twig' %}

{% block title %}ApiToken index{% endblock %}

{% block body %}
    <h1>ApiToken index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Token</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for api_token in api_tokens %}
            <tr>
                <td>{{ api_token.token }}</td>
                <td>
                    {{ include('api_token/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_api_token_new') }}">Create new</a>
{% endblock %}
