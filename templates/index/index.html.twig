{% extends 'base.html.twig' %}

{% block title %}Hello {{ app.user.email }}{% endblock %}

{% block body %}



    <h2>Last 10 transactions</h2>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Date</th>
        </tr>
        </thead>
        <tbody>
        {% for  transaction in last10transaction %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ type(transaction.type) }}</td>
                <td class="text-center">
                    <a class="btn {{ color(transaction.type) }} text-decoration-none"
                       href="{{ path('app_transaction_show', {'id': transaction.id}) }}">{{ transaction.amount }}</a>
                </td>
                <td>{{ transaction.category ? transaction.category.name : '' }}</td>
                <td>{{ transaction.date ? transaction.date|date('Y-m-d') : '' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}