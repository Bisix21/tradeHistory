{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block body %}
    <div class="mt-3 mb-3">
        {{ include('component/_button.html.twig', {'href': path('app_transaction_new') }) }}
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Type</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Number</th>
                <th>Date</th>
            </tr>
            </thead>
            <tbody>
            {% for transaction in pagerfanta.currentPageResults %}
                <tr>
                    <td>
                        {{ include('component/_transaction_type.html.twig') }}
                    </td>
                    <td class="text-center">
                        <a class="btn {{ color(transaction.type) }} text-decoration-none"
                           href="{{ path('app_transaction_show', {'id': transaction.id}) }}">{{ transaction.amount }}</a>
                    </td>
                    <td>{{ transaction.category ? transaction.category.name : '' }}</td>
                    <td>{{ transaction.wallet.number }}</td>
                    <td>{{ transaction.date ? transaction.date|date('d-m-y') : '' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="pagination">
            <div class="pagerfanta">
                {{ pagerfanta(pagerfanta, 'twitter_bootstrap4') }}
            </div>
        </div>
    </div>
{% endblock %}
