{% extends 'base.html.twig' %}

{% block title %}Wallet{% endblock %}

{% block body %}

    <a class="btn btn-success mb-3" href="{{ path('app_wallet_new') }}">Create</a>

    <table class="table">
        <thead>
        <tr>
            <th>Currency</th>
            <th>Amount</th>
            <th>Name</th>
            <th>Number</th>
        </tr>
        </thead>
        <tbody>
        {% for wallet in wallets %}
            <tr>
                <td>{{ wallet.currency }}</td>
                <td>{{ wallet.amount }}</td>
                <td>{{ wallet.name  ?? "---"}}</td>
                <td><a href="{{ path('app_wallet_show',{'number':wallet.number}) }}">{{ wallet.number }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
