{% extends 'base.html.twig' %}

{% block title %}Wallet{% endblock %}

{% block body %}
    <h1>Wallet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Number</th>
                <td>{{ wallet.number }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ wallet.name }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ wallet.amount }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('component/_link.html.twig',{'href': path('app_wallet_index'), 'aditional_class': 'mx-3'}) }}

    <a class="btn btn-warning float-start" href="{{ path('app_wallet_edit', {'number': wallet.number}) }}">Edit</a>
    {{ include('wallet/_delete_form.html.twig') }}

{% endblock %}
